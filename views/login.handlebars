<div class="container-teacher ">
    <div class="item-teacher ">

        <div class="sign-in-google">
            <h2 class="">Login with Google</h2>
            <div class="google-sign-item"><div class="g-signin2 googlebox" data-onsuccess="onSignIn"></div></div>
        </div>

        <h2>Login with email</h2>

        <form class="form login-form" action="/api/user/verifyLogin" method="post">
            <div class="form-group">
                <label for="username-login">email:</label>
                <input class="form-input" type="text" id="email" name="email" value="lbrown@myschool.com"/>
            </div>

            <div class="form-group">
                <label for="password-login">password:</label>
                <input class="form-input" type="password" id="password" name="password" value="123"/>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">login</button>
            </div>
        </form>
        <br/>

    </div>
    <div class="item-picture front-image-display ">
        <img src="/img/school.png" class="front-image" alt="" class="">
    </div>
</div>


<script src="./js/login.js"></script>

